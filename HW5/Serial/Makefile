#declare variable
CC = g++
INCLUDE_FILES = 
INCLUDE_FLAGS = $(foreach d, $(INCLUDE_FILES), -I $d)
CTAGS_FILES = ./include
CLFLAGS = -lOpenCL
CFLAGS = -std=c++11
MAIN_OBJECT_NAME_MAIN = histogram
MAIN_OBJECT_SOURCE_MAIN = $(MAIN_OBJECT_NAME_MAIN).cpp
MAIN_OBJECT_EXEC_MAIN = $(MAIN_OBJECT_NAME_MAIN)
MAIN_OBJECT_EXEC_OUTPUT = 

all : clean
	$(CC) $(CFLAGS) $(INCLUDE_FLAGS) -o $(MAIN_OBJECT_EXEC_OUTPUT)$(MAIN_OBJECT_EXEC_MAIN) $(MAIN_OBJECT_SOURCE_MAIN) $(CLFLAGS)

test : 
	/usr/bin/time -f "%e" ${MAIN_OBJECT_EXEC_OUTPUT}$(MAIN_OBJECT_EXEC_MAIN) $(bp)

clean : 
	rm -rf $(MAIN_OBJECT_EXEC_OUTPUT)$(MAIN_OBJECT_EXEC_MAIN)
	rm -rf ./hist*.bmp

