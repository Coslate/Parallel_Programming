#declare variable
CC = nvcc
INCLUDE_FILES = 
INCLUDE_FLAGS = $(foreach d, $(INCLUDE_FILES), -I $d)
CTAGS_FILES = ./include
CFLAGS = 
MAIN_OBJECT_NAME_MAIN = cuda_wave
MAIN_OBJECT_SOURCE_MAIN = $(MAIN_OBJECT_NAME_MAIN).cu
MAIN_OBJECT_EXEC_MAIN = $(MAIN_OBJECT_NAME_MAIN)
MAIN_OBJECT_EXEC_OUTPUT = ./

all : clean
	$(CC) $(INCLUDE_FLAGS) $(MAIN_OBJECT_SOURCE_MAIN) -o $(MAIN_OBJECT_EXEC_OUTPUT)$(MAIN_OBJECT_EXEC_MAIN) $(CFLAGS)

test : 
	/usr/bin/time -f "%e" ${MAIN_OBJECT_EXEC_OUTPUT}$(MAIN_OBJECT_EXEC_MAIN) $(tp) $(ns)

compile_info : 
	$(CC) $(INCLUDE_FLAGS) $(MAIN_OBJECT_SOURCE_MAIN) -o $(MAIN_OBJECT_EXEC_OUTPUT)$(MAIN_OBJECT_EXEC_MAIN) $(CFLAGS) --resource-usage

compare : 
	./compare.py $(tp) $(ns)
clean : 
	rm -rf $(MAIN_OBJECT_EXEC_OUTPUT)$(MAIN_OBJECT_EXEC_MAIN)

